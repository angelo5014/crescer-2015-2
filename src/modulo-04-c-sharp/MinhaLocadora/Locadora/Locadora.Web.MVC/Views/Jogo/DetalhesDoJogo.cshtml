@model JogoCompletoModel
@{
    ViewBag.Title = "DetalhesDoJogo";
}




<section class="col-lg-12">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 text-center">


        <img src="@Url.Content(Model.Imagem)" />

        <h3>Nome do Jogo: @Model.Nome</h3>
        <h4>Preço: @Model.Preco</h4>
        <h4>Descrição: @Model.Descricao</h4>
        <h4>Categoria: @Model.Categoria</h4>
        <h5>Selo: @Model.Selo</h5>

        <iframe width="420" height="315" src="@Model.Video" frameborder="0" allowfullscreen></iframe>

    </div>
</section>

