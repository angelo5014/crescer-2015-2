@model RelatorioJogosDisponiveisModel
@{
    ViewBag.Title = "JogosDisponiveis";
}

<h2>Jogos Disponiveis</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Selo</th>
        </tr>
    </thead>

    @foreach (var jogo in Model.Jogos)
    {
        <tr>
            <td>@Html.ActionLink(jogo.Nome, "DetalhesDoJogo", "Jogo", new { id = jogo.IdJogo }, null)</td>
            <td>@jogo.Categoria</td>
            <td class="text-center">@Html.Partial("~/Views/Shared/Jogo/_SeloJogo.cshtml", jogo.Selo)</td>
            <td>
                <a href="~/Jogo/Manter/@jogo.IdJogo">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
            <td>
                <a class="btn btn-primary" href="~/Locacao/Index/@jogo.IdJogo">Locar</a>
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Cadastrar","Manter","Jogo", null, new { @class = "btn btn-primary" })
</div>

Quantidade de jogos: @Model.QuantidadeTotalDeJogos <br />


