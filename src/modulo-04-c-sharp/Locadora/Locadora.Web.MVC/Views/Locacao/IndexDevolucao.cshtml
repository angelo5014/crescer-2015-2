@model LocacaoModel

@{ 
    ViewBag.Title = "Devolucao";
}

@using (Html.BeginForm("Devolver", "Locacao", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.TextBoxFor(m => m.NomeJogo, new { @class = "form-control" })

    <button type="submit" class="btn btn-primary">Salvar</button>
}
@if (Model != null)
{
<br />
<div class="panel panel-default">
    <div class="panel-heading text-center"><h2>@Model.NomeJogo</h2></div>
    <div class="panel-body">
        <div class="row">
            @Model.NomeJogo
            @Model.DataLocacao
            @Model.Preco
        </div>

        @if (!String.IsNullOrEmpty(Model.TagVideo))
        {
            <br />
            <div class="row bg-black">
                <div class="col-lg-12 text-center">
                    <h2 class="color-white">Vídeo do jogo</h2>
                    @Html.Raw(Model.TagVideo)
                </div>
            </div>
        }
    </div>
</div>
}